												{% endif %}
											</div>
											<div class="form-group required">
												<label for="input-image-additional-width" class="col-form-label">{{ entry_image_additional }}</label>
												<div class="row">
													<div class="col-sm-6">
														<input type="text" name="theme_ultimaterial_image_additional_width" value="{{ theme_ultimaterial_image_additional_width }}" placeholder="{{ entry_width }}" id="input-image-additional-width" class="form-control"/>
													</div>
													<div class="col-sm-6">
														<input type="text" name="theme_ultimaterial_image_additional_height" value="{{ theme_ultimaterial_image_additional_height }}" placeholder="{{ entry_height }}" class="form-control"/>
													</div>
												</div>
												{% if error.image_additional %}
													<div class="invalid-tooltip">{{ error.image_additional }}</div>
												{% endif %}
											</div>
										</div>
										<div class="tab-pane" id="product-pills-product-comparison" role="tabpanel" aria-labelledby="product-pills-product-comparison-tab">
											<div class="form-group required">
												<label for="input-image-compare" class="col-form-label">{{ entry_image_compare }}</label>
												<div class="row">
													<div class="col-sm-6">
														<input type="text" name="theme_ultimaterial_image_compare_width" value="{{ theme_ultimaterial_image_compare_width }}" placeholder="{{ entry_width }}" id="input-image-compare" class="form-control"/>
													</div>
													<div class="col-sm-6">
														<input type="text" name="theme_ultimaterial_image_compare_height" value="{{ theme_ultimaterial_image_compare_height }}" placeholder="{{ entry_height }}" class="form-control"/>
