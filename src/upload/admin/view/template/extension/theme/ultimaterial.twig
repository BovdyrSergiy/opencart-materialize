												<label for="input-image-product-width" class="col-form-label">{{ entry_image_product }}</label>
												<div class="row">
													<div class="col-sm-6">
														<input type="text" name="theme_ultimaterial_image_product_width" value="{{ theme_ultimaterial_image_product_width }}" placeholder="{{ entry_width }}" id="input-image-product-width" class="form-control"/>
