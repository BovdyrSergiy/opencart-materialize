													<div class="invalid-tooltip">{{ error.product_limit }}</div>
												{% endif %}
											</div>
											<div class="form-label-group required">
												<input type="text" name="theme_ultimaterial_product_description_length" value="{{ theme_ultimaterial_product_description_length }}" placeholder="{{ entry_product_description_length }}" id="input-description-limit" class="form-control" required>
