														<input type="text" name="theme_ultimaterial_image_thumb_height" value="{{ theme_ultimaterial_image_thumb_height }}" placeholder="{{ entry_height }}" class="form-control"/>
													</div>
												</div>
												{% if error.image_thumb %}
													<div class="invalid-tooltip">{{ error.image_thumb }}</div>
												{% endif %}
											</div>
											<div class="form-group required">
												<label for="input-image-popup-width" class="col-form-label">{{ entry_image_popup }}</label>
												<div class="row">
													<div class="col-sm-6">
														<input type="text" name="theme_ultimaterial_image_popup_width" value="{{ theme_ultimaterial_image_popup_width }}" placeholder="{{ entry_width }}" id="input-image-popup-width" class="form-control"/>
													</div>
													<div class="col-sm-6">
														<input type="text" name="theme_ultimaterial_image_popup_height" value="{{ theme_ultimaterial_image_popup_height }}" placeholder="{{ entry_height }}" class="form-control"/>
													</div>
												</div>
												{% if error.image_popup %}
