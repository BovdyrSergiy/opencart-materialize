				'min': 0,
				'max': 32
			},
			format: wNumb({
				decimals: 0
			}),
		});

	  sliderBorderRadius.noUiSlider.on('change', function (values) {
			$('#input-card-border-radius').val(values[0]).change();
		});

		let sliderShadow = document.getElementById('slider-card-shadow');
		noUiSlider.create(sliderShadow, {
			start: 1 {#{{ theme_mt_materialize_scheme.default.card.default.shadow }}#},
			step: 1,
			connect: [true, false],
			range: {
				'min': 0,
				'max': 5
			},
			format: wNumb({
				decimals: 0
			}),
		});

