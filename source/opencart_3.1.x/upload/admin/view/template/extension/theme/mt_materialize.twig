			$('#input-card-shadow').val(values[0]).change();
		});

		$('#test-sass').on('click', function() {
			$.ajax({
				url: 'index.php?route=extension/theme/mt_materialize/sassVariables&user_token={{ user_token }}',
				type: 'post',
				data: $('#form-theme').serialize(),
				dataType: 'json',
				beforeSend: function() {
					preloader.show();
				},
				complete: function() {
					preloader.hide();
				},
				success: function(json) {
					console.log(json);
				},
				error: function(xhr, ajaxOptions, thrownError) {
					alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
				}
			});
		});

		$('#sidenav').sidenav({
			edge: 'right'
		});
  });

	$('[data-mt-settings]').mtSettings();
</script>
