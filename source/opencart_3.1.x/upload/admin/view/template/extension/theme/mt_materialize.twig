		let sliderImageWidth = document.getElementById('slider-card-default-image-width');
		noUiSlider.create(sliderImageWidth, {
			start: {{ theme_mt_materialize_image_product_width }},
			step: 1,
			connect: [true, false],
			range: {
				'min': 0,
				'max': 400
			},
			format: wNumb({
				decimals: 0
			}),
		});

		sliderImageWidth.noUiSlider.on('change', function (values) {
			$('#input-card-default-image-width').val(values[0]).change();
		});

		let sliderImageHeight = document.getElementById('slider-card-default-image-height');
		noUiSlider.create(sliderImageHeight, {
			start: {{ theme_mt_materialize_image_product_height }},
			step: 1,
			connect: [true, false],
			range: {
				'min': 0,
				'max': 400
			},
			format: wNumb({
				decimals: 0
			}),
		});

		sliderImageHeight.noUiSlider.on('change', function (values) {
			$('#input-card-default-image-height').val(values[0]).change();
		});

		let sliderBorderRadius = document.getElementById('slider-card-border-radius');
		noUiSlider.create(sliderBorderRadius, {
			start: {{ theme_mt_materialize_scheme.default.card.default.border_radius }},
			step: 1,
			connect: [true, false],
