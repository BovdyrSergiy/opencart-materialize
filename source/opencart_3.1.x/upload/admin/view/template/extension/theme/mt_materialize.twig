											<div class="row">
												<div class="col-sm-6">
													<input type="text" name="theme_mt_materialize_image_location_width" value="{{ theme_mt_materialize_image_location_width }}" placeholder="{{ entry_width }}" id="input-image-location" class="form-control"/>
